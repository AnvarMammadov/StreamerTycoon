<UserControl x:Class="StreamerTycoon.Views.DesktopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">

    <Grid Background="{StaticResource GeometricBackground}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10">

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Recycle Bin" 
                    Command="{Binding OpenAppCommand}" CommandParameter="PC">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Trash}" Fill="#E0E0E0" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,5"/>
                    <TextBlock Text="Junkyard" Foreground="White" TextAlignment="Center" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="My Computer"
                    Command="{Binding OpenAppCommand}" CommandParameter="PC">
                <StackPanel>
                    <Path Data="{StaticResource Icon_MyPC}" Fill="White" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,5"/>
                    <TextBlock Text="System Box" Foreground="White" TextAlignment="Center" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Web Browser"
                    Command="{Binding OpenAppCommand}" CommandParameter="Browser">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Web}" Fill="#4FC3F7" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,5"/>
                    <TextBlock Text="Web Portal" Foreground="White" TextAlignment="Center" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Secure Chat"
                    Command="{Binding OpenAppCommand}" CommandParameter="Chat">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Discord}" Fill="#5865F2" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,5">
                        <Path.Effect>
                            <DropShadowEffect Color="#5865F2" BlurRadius="5" Opacity="0.5"/>
                        </Path.Effect>
                    </Path>
                    <TextBlock Text="ChatGrid" Foreground="White" TextAlignment="Center" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Streaming Platform"
                    Command="{Binding OpenAppCommand}" CommandParameter="Stream">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Kick}" Fill="#00E676" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,5">
                        <Path.Effect>
                            <DropShadowEffect Color="#00E676" BlurRadius="5" Opacity="0.4"/>
                        </Path.Effect>
                    </Path>
                    <TextBlock Text="LivePulse" Foreground="White" TextAlignment="Center" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Darknet Access"
                    Command="{Binding OpenAppCommand}" CommandParameter="Onion">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Thor}" Fill="#AB47BC" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,5">
                        <Path.Effect>
                            <DropShadowEffect Color="#AB47BC" BlurRadius="8" Opacity="0.6"/>
                        </Path.Effect>
                    </Path>
                    <TextBlock Text="OnionCore" Foreground="#E0E0E0" TextAlignment="Center" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Files"
                    Command="{Binding OpenAppCommand}" CommandParameter="PC">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Folder}" Fill="#FFD54F" Width="40" Height="40" Stretch="Uniform" Margin="0,0,0,5"/>
                    <TextBlock Text="Dumped Data" Foreground="White" TextAlignment="Center" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

        </WrapPanel>

        <Border Grid.Row="1" Background="{StaticResource Brush_Taskbar}" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="50" Background="Transparent" BorderThickness="0" Margin="5,0" Cursor="Hand">
                    <Path Data="{StaticResource Icon_Start}" Fill="White" Width="22" Height="22" Stretch="Uniform">
                        <Path.Effect>
                            <DropShadowEffect Color="#3A6B8E" BlurRadius="5"/>
                        </Path.Effect>
                    </Path>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Width="180" Height="26" Background="#20FFFFFF" CornerRadius="2" Margin="5,0,10,0" VerticalAlignment="Center">
                        <TextBlock Text="Search FakeOS..." Foreground="#80FFFFFF" VerticalAlignment="Center" Margin="10,0" FontSize="11"/>
                    </Border>

                    <Button Width="40" Background="Transparent" BorderThickness="0" Margin="2,0"
                            Command="{Binding OpenAppCommand}" CommandParameter="Chat">
                        <Grid>
                            <Path Data="{StaticResource Icon_Discord}" Fill="#5865F2" Width="20" Height="20" Stretch="Uniform"/>
                            <Rectangle Height="2" Width="20" Fill="#5865F2" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        </Grid>
                    </Button>

                    <Button Width="40" Background="Transparent" BorderThickness="0" Margin="2,0"
                            Command="{Binding OpenAppCommand}" CommandParameter="Onion">
                        <Path Data="{StaticResource Icon_Thor}" Fill="#AB47BC" Width="20" Height="20" Stretch="Uniform" Opacity="0.7"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                    <TextBlock Text="{Binding CurrentTime}" Foreground="White" VerticalAlignment="Center" FontSize="12" Margin="10,0"/>
                    <TextBlock Text="{Binding CurrentDate}" Foreground="#AAA" VerticalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="0" Grid.RowSpan="2" Panel.ZIndex="100">
            <ItemsControl ItemsSource="{Binding OpenWindows}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E1E" BorderBrush="#444" BorderThickness="1" CornerRadius="8" 
                                Width="800" Height="500">
                            <Border.Effect>
                                <DropShadowEffect Color="#00F0FF" BlurRadius="15" Opacity="0.4"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Background="#252525">
                                    <TextBlock Text="{Binding Title}" Foreground="#AAA" VerticalAlignment="Center" Margin="15,0"/>

                                    <Button Command="{Binding CloseCommand}" Content="✕" HorizontalAlignment="Right" Width="40" 
                                            Background="Transparent" BorderThickness="0" Foreground="White" Cursor="Hand"/>
                                </Grid>

                                <ContentControl Grid.Row="1" Content="{Binding}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

    </Grid>
</UserControl>