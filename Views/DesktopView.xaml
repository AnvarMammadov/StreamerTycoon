<UserControl x:Class="StreamerTycoon.Views.DesktopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">

    <Grid Background="{StaticResource GeometricBackground}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="15">

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Recycle Bin" 
                    Command="{Binding OpenAppCommand}" CommandParameter="Junkyard">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Trash}" Fill="#AAA" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                    <TextBlock Text="Junkyard" Foreground="#EEE" TextAlignment="Center" FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="My Computer"
                    Command="{Binding OpenAppCommand}" CommandParameter="PC">
                <StackPanel>
                    <Path Data="{StaticResource Icon_MyPC}" Fill="#00A8FF" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                    <TextBlock Text="System" Foreground="#EEE" TextAlignment="Center" FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="G2G Market"
                    Command="{Binding OpenAppCommand}" CommandParameter="Browser">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Web}" Fill="#007ACC" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                    <TextBlock Text="Marketplace" Foreground="#EEE" TextAlignment="Center" FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Chat"
                    Command="{Binding OpenAppCommand}" CommandParameter="Chat">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Discord}" Fill="#5865F2" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                    <TextBlock Text="ChatGrid" Foreground="#EEE" TextAlignment="Center" FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Streaming"
                    Command="{Binding OpenAppCommand}" CommandParameter="Stream">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Kick}" Fill="#00E676" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8">
                        <Path.Effect>
                            <DropShadowEffect Color="#00E676" BlurRadius="8" Opacity="0.4"/>
                        </Path.Effect>
                    </Path>
                    <TextBlock Text="LivePulse" Foreground="#EEE" TextAlignment="Center" FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Dark Web"
                    Command="{Binding OpenAppCommand}" CommandParameter="Onion">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Thor}" Fill="#AB47BC" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8">
                        <Path.Effect>
                            <DropShadowEffect Color="#AB47BC" BlurRadius="10" Opacity="0.6"/>
                        </Path.Effect>
                    </Path>
                    <TextBlock Text="OnionCore" Foreground="#AB47BC" TextAlignment="Center" FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource DesktopIconBtn}" ToolTip="Files"
                    Command="{Binding OpenAppCommand}" CommandParameter="DataDumps">
                <StackPanel>
                    <Path Data="{StaticResource Icon_Folder}" Fill="#FFD54F" Width="32" Height="32" Stretch="Uniform" Margin="0,0,0,8"/>
                    <TextBlock Text="Data Dumps" Foreground="#EEE" TextAlignment="Center" FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>

        </WrapPanel>

        <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" 
                Background="#E6111827" BorderBrush="#333" BorderThickness="1" CornerRadius="8" Padding="15,8">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="💳" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="BALANCE" Foreground="#9CA3AF" FontSize="10" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Game.Money, StringFormat='${0:N0}'}" Foreground="#10B981" FontSize="18" FontWeight="Bold" FontFamily="Consolas"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="0" Panel.ZIndex="100">
            <ItemsControl ItemsSource="{Binding OpenWindows}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        <Setter Property="Panel.ZIndex" Value="{Binding ZIndex}"/>
                        <Setter Property="Visibility" Value="{Binding IsVisible}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource WindowFrameTemplate}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Border Grid.Row="1" Background="#E60F1218" BorderBrush="#333" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="50" Background="Transparent" BorderThickness="0" Margin="5,0" Cursor="Hand">
                    <Path Data="{StaticResource Icon_Start}" Fill="#00A8FF" Width="20" Height="20" Stretch="Uniform">
                        <Path.Effect>
                            <DropShadowEffect Color="#00A8FF" BlurRadius="8" Opacity="0.6"/>
                        </Path.Effect>
                    </Path>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="180" Height="30" Background="#20FFFFFF" CornerRadius="4" Margin="10,0,15,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" Foreground="#888" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <TextBlock Text="Search OS..." Foreground="#666" VerticalAlignment="Center" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <ItemsControl ItemsSource="{Binding OpenWindows}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="45" Height="40" Margin="2,0" Background="#15FFFFFF" CornerRadius="4" 
                                        BorderBrush="#30FFFFFF" BorderThickness="0,0,0,2" Cursor="Hand" ToolTip="{Binding Title}">
                                    <Border.InputBindings>
                                        <MouseBinding Gesture="LeftClick" Command="{Binding ToggleMinimizeCommand}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Path Width="22" Height="22" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Path.Style>
                                                <Style TargetType="Path">
                                                    <Setter Property="Data" Value="{StaticResource Icon_Folder}"/>
                                                    <Setter Property="Fill" Value="#AAAAAA"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IconKey}" Value="Icon_Web">
                                                            <Setter Property="Data" Value="{StaticResource Icon_Web}"/>
                                                            <Setter Property="Fill" Value="#007ACC"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IconKey}" Value="Icon_Discord">
                                                            <Setter Property="Data" Value="{StaticResource Icon_Discord}"/>
                                                            <Setter Property="Fill" Value="#5865F2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IconKey}" Value="Icon_Kick">
                                                            <Setter Property="Data" Value="{StaticResource Icon_Kick}"/>
                                                            <Setter Property="Fill" Value="#00E676"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IconKey}" Value="Icon_Thor">
                                                            <Setter Property="Data" Value="{StaticResource Icon_Thor}"/>
                                                            <Setter Property="Fill" Value="#AB47BC"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IconKey}" Value="Icon_MyPC">
                                                            <Setter Property="Data" Value="{StaticResource Icon_MyPC}"/>
                                                            <Setter Property="Fill" Value="#00A8FF"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IconKey}" Value="Icon_Trash">
                                                            <Setter Property="Data" Value="{StaticResource Icon_Trash}"/>
                                                            <Setter Property="Fill" Value="#AAA"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IconKey}" Value="Icon_Folder">
                                                            <Setter Property="Data" Value="{StaticResource Icon_Folder}"/>
                                                            <Setter Property="Fill" Value="#FFD54F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Path.Style>
                                        </Path>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding CurrentTime}" Foreground="White" FontSize="12" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding CurrentDate}" Foreground="#888" FontSize="10" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>