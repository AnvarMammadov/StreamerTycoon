<UserControl x:Class="StreamerTycoon.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="#36393F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2F3136">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="52"/>
                </Grid.RowDefinitions>

                <Border BorderBrush="#202225" BorderThickness="0,0,0,1" Padding="10">
                    <Border Background="#202225" CornerRadius="4">
                        <TextBlock Text="Find conversation" Foreground="#72767D" VerticalAlignment="Center" Margin="10,0" FontSize="13"/>
                    </Border>
                </Border>

                <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
                    <ItemsControl ItemsSource="{Binding Contacts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="8,2" Padding="8" CornerRadius="4" Cursor="Hand" Background="Transparent">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#393C43"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Width="32" Height="32">
                                            <Ellipse Fill="{Binding StatusColor}"/>
                                            <Path Data="{StaticResource Icon_User}" Fill="White" Width="16" Height="16" Stretch="Uniform"/>

                                            <Border Width="14" Height="14" CornerRadius="7" Background="#2F3136" 
                                                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-2,-2">
                                                <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>

                                        <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="#8E9297" 
                                                   VerticalAlignment="Center" FontWeight="SemiBold" Margin="12,0,0,0" FontSize="14"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="2" Background="#292B2F" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="32" Height="32" Fill="#3BA55C"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                            <TextBlock Text="Ghost_User" Foreground="White" FontWeight="Bold" FontSize="12"/>
                            <TextBlock Text="#9999" Foreground="#B9BBBE" FontSize="10"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="#36393F" BorderBrush="#26272D" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <TextBlock Text="@" Foreground="#8E9297" FontSize="20" Margin="0,0,8,0" FontFamily="Segoe UI Symbol"/>
                    <TextBlock Text="Scammer1337" Foreground="White" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                    <Border Background="#3BA55C" Width="8" Height="8" CornerRadius="4" Margin="10,2,0,0"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" Padding="0,15">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="16,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid VerticalAlignment="Top" Margin="0,2,0,0">
                                    <Ellipse Width="40" Height="40" Fill="{Binding ColorHex}"/>
                                    <Path Data="{StaticResource Icon_User}" Fill="#20000000" Stretch="Uniform" Margin="8"/>
                                </Grid>

                                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="{Binding Username}" Foreground="White" FontWeight="SemiBold" FontSize="15" Cursor="Hand">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="TextDecorations" Value="Underline"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="Today at 14:20" Foreground="#72767D" FontSize="11" Margin="8,3,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Message}" Foreground="#DCDDDE" TextWrapping="Wrap" FontSize="14" LineHeight="20" FontWeight="Normal"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Grid Grid.Row="2" Margin="16,0,16,24">
                <Border Background="#40444B" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#B9BBBE" Width="24" Height="24" CornerRadius="12" Margin="10,0">
                            <TextBlock Text="+" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#40444B"/>
                        </Border>

                        <TextBox Grid.Column="1" Text="Message @Scammer1337" 
                                 Background="Transparent" Foreground="#DCDDDE" BorderThickness="0" 
                                 VerticalContentAlignment="Center" Padding="0,12" FontSize="14"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>